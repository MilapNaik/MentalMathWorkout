<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context="com.milapnaik.mentalmathworkout.MainActivity"
    android:background="#bcb8b8">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="45dp"
        android:src="@drawable/mentalmathworkoutlogo"
        android:contentDescription="@string/logo" />

    <Button

        android:text="@string/math_test"
        android:onClick="MathTest"
        android:id="@+id/math_test"
        android:layout_marginTop="93dp"
        android:layout_below="@+id/imageView"
        android:layout_alignLeft="@+id/imageView"
        android:layout_alignStart="@+id/imageView"
        android:clickable="false"
        android:layout_width="126dp"
        android:layout_height="44dp"
        android:textColor="#FFFFFF"
        android:textSize="18sp"

        android:background="@drawable/buttonshape"/>
    <!--android:shadowColor="#A8A8A8"
   android:shadowDx="0"
   android:shadowDy="0"
   android:shadowRadius="5"-->

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:onClick="Info"
        android:id="@+id/info"
        android:background="@drawable/info"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="10dp" />

    <Button
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:onClick="Leaderboard"
        android:id="@+id/leaderboard"
        android:background="@drawable/leaderboard"
        android:layout_alignTop="@+id/info"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="10dp" />


</RelativeLayout>
