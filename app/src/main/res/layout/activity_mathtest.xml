<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context=".MathTest"
    android:id="@+id/mtestcontent"
    android:background="@color/background">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:id="@+id/qcount"
        android:textSize="12sp"
        android:textColor="#000"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Enter"
        android:textSize="25sp"
        android:id="@+id/enterButton"
        android:textColor="#FFF"
        android:background="@color/blackish"
        android:layout_marginBottom="100dp"
        android:layout_alignParentBottom="true"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="C"
        android:textSize="25sp"
        android:id="@+id/clear"
        android:textColor="#FFF"
        android:background="@color/blackish"
        android:layout_above="@id/enterButton"/>

    <LinearLayout
        android:id="@+id/LinearLayout4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/clear" >
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="-"
            android:textSize="25sp"
            android:id="@+id/nminus"
            android:textColor="#FFF"
            android:background="@drawable/keypad" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="0"
            android:textSize="25sp"
            android:id="@+id/n0"
            android:textColor="#FFF"
            android:background="@drawable/keypad" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="."
            android:textSize="25sp"
            android:id="@+id/ndecimal"
            android:textColor="#FFF"
            android:background="@drawable/keypad" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/LinearLayout3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/LinearLayout4" >

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="7"
            android:textSize="25sp"
            android:id="@+id/n7"
            android:textColor="#FFF"
            android:background="@drawable/keypad" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="8"
            android:textSize="25sp"
            android:id="@+id/n8"
            android:textColor="#FFF"
            android:background="@drawable/keypad"
            />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="9"
            android:textSize="25sp"
            android:id="@+id/n9"
            android:textColor="#FFF"
            android:background="@drawable/keypad" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/LinearLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/LinearLayout3" >
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="4"
            android:textSize="25sp"
            android:textColor="#FFF"
            android:background="@drawable/keypad"
            android:id="@+id/n4" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="5"
            android:textSize="25sp"
            android:textColor="#FFF"
            android:background="@drawable/keypad"
            android:id="@+id/n5"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="6"
            android:textSize="25sp"
            android:textColor="#FFF"
            android:background="@drawable/keypad"
            android:id="@+id/n6" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/LinearLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/LinearLayout2">
        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="1"
            android:textSize="25sp"
            android:id="@+id/n1"
            android:textColor="#FFF"
            android:background="@drawable/keypad"
            android:layout_below="@+id/mathAnswer"
            android:layout_marginTop="25dp"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="2"
            android:textSize="25sp"
            android:id="@+id/n2"
            android:textColor="#FFF"
            android:background="@drawable/keypad"
            android:layout_below="@+id/mathAnswer"
            android:layout_marginTop="25dp" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="3"
            android:textSize="25sp"
            android:id="@+id/n3"
            android:textColor="#FFF"
            android:background="@drawable/keypad"
            android:layout_below="@+id/mathAnswer"
            android:layout_marginTop="25dp"/>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text=""
        android:textColor="#FFF"
        android:textSize="25sp"
        android:id="@+id/mathAnswer"
        android:background="@color/blackish"

        android:layout_above="@+id/LinearLayout1"
        android:textAlignment="center" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/mathProblem"
        android:text=""
        android:textColor="#FFF"
        android:textSize="25sp"
        android:background="@color/blackish"
        android:textAlignment="center"

        android:layout_centerHorizontal="true"
        android:layout_above="@id/mathAnswer"/>


</RelativeLayout>
